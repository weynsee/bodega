<div class="row">
  <div class="col-lg-12">
    <div class="tab-content">
      <div class="tab-pane active">
        <div class="d-flex justify-content-center">
          <h4 class="mb-3"><%= format_date_range(@advance.date_range) %> <%= advance_name %> for <%= @advance.employee.try(:name) %></h4>
        </div>
        <%= render 'shared/receipt_top_row', model: @advance %>
        <div class="d-flex p-2">
          <div>
            <span class="pr-2">Advance Type:</span>
            <span><%= @advance.advance_type.humanize %></span>
          </div>
          <div class="ml-auto">
            <span class="pr-2">Amount:</span>
            <span><%= number_to_currency(@advance.amount) %></span>
          </div>
        </div>
        <%- if @advance.description.present? -%>
          <div class="p-2 border">
            <%= @advance.description %>
          </div>
        <%- end -%>
        <div class="p-2">
          <%= render 'shared/receipt_footer' %>
        </div>
      </div>
    </div>
  </div>
</div>
