<%- unless print_preview? -%>
  <div class="d-flex">
    <div class="p-2">
      <%= link_to 'Printer-friendly version',
        preview_path,
        target: '_blank',
        class: 'btn btn-primary'
      %>
    </div>
    <div class="ml-auto p-2">
      <%= link_to 'Delete', payslip_path(@payslip),
        remote: true,
        method: :delete,
        data: {
          confirm: 'Are you sure you want to delete this payslip?'
        },
        class: 'btn btn-danger' %>
    </div>
  </div>
<%- end -%>
