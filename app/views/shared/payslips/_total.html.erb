<ul class="list-group mb-3">
  <li class="list-group-item d-flex justify-content-between lh-condensed">
    <div>
      <h6 class="my-0">Total income</h6>
      <small class="text-muted"><%= number_with_precision(@payslip.rate, precision: 2) %> (rate) * <%= @payslip.days_present %> (days present)</small>
    </div>
    <span class="text-muted"><%= number_to_currency @payslip.total_income %></span>
  </li>
  <%- if @payslip.applicable_advances.present? -%>
    <li class="list-group-item d-flex justify-content-between lh-condensed">
      <div class="text-success">
        <h6 class="my-0">Total deductions</h6>
        <small class="text-muted">Sum of all deductions</small>
      </div>
      <span class="text-muted">-<%= number_to_currency @payslip.total_deductions %></span>
    </li>
  <%- end -%>
  <li class="list-group-item d-flex justify-content-between">
    <span>Total</span>
    <strong><%= number_to_currency @payslip.total %></strong>
  </li>
</ul>
