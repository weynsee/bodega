<ul class="list-group mb-3">
  <%- @payslip.attendances.each do |attendance| -%>
    <li class="list-group-item d-flex justify-content-between lh-condensed">
      <div>
        <h6 class="my-0"><%= l attendance.applies_on, format: :short %></h6>
      </div>
      <span class="text-muted"><%= number_with_precision attendance.amount, precision: 2 %></span>
    </li>
  <%- end -%>
  <li class="list-group-item d-flex justify-content-between">
    <span>Total</span>
    <strong><%= number_with_precision @payslip.attendances.sum(&:amount), precision: 2 %></strong>
  </li>
</ul>
