<div class="d-flex">
  <div class="p-2">
    <%= f.primary 'Save', data: { 'disable-with': 'Saving...' } %>
  </div>
  <%- unless @advance.new_record? -%>
    <div class="ml-auto p-2">
      <%= link_to 'Delete', employee_salary_advance_path(@advance),
        remote: true,
        method: :delete,
        data: {
          confirm: 'Are you sure you want to delete this advance?'
        },
        class: 'btn btn-danger' %>
    </div>
  <%- end -%>
</div>
