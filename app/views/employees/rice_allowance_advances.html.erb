<div class="row">
  <div class="col-lg-12">
    <%= render 'employees/nav_pills' %>
    <div class="tab-content">
      <div class="tab-pane active">
        <h4 class="mb-3">
          Rice allowance advances for <%= @employee.name %>
        </h4>
        <%= render 'shared/advances/search_form',
          url: nesting_aware_rice_allowance_advances_path,
          type: :weekly %>
        <%= render 'shared/advances/table' %>
        <div class="row">
          <div class="col-auto mr-auto">
            <nav aria-label="Advances list navigation">
              <%= pagy_bootstrap_nav(@pagy).html_safe %>
            </nav>
          </div>
          <div class="col-auto">
            <%= link_to 'Create new rice allowance advance',
              new_employee_rice_allowance_advance_path(@employee), class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
