<div class="row">
  <div class="col-lg-12">
    <%= render 'employees/nav_pills' %>
    <div class="tab-content">
      <div class="tab-pane active">
        <%= render 'shared/advances/search_form',
          url: nesting_aware_salary_advances_path,
          selected: params[:range] || @employee.rate_type,
          type: %i(weekly half_monthly) %>
        <%= render 'salary_advances/table' %>
        <div class="row">
          <div class="col-auto mr-auto">
            <nav aria-label="Advances list navigation">
              <%= pagy_bootstrap_nav(@pagy).html_safe %>
            </nav>
          </div>
          <div class="col-auto">
            <%= link_to 'Create new salary advance',
              new_employee_salary_advance_path(@employee), class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
