<div class="row">
  <div class="col-lg-12">
    <%= render 'employees/nav_pills' %>
    <div class="tab-content">
      <div class="tab-pane active">
        <h4 class="mb-3">
          Salary payslips for <%= @employee.name %>
        </h4>
        <%= render 'shared/payslips/search_form',
          url: nesting_aware_salary_payslips_path,
          selected: params[:range] || @employee.rate_type,
          type: %i(weekly half_monthly) %>
        <%= render 'salary_payslips/table' %>
        <div class="row">
          <div class="col-auto mr-auto">
            <nav aria-label="Payslips list navigation">
              <%= pagy_bootstrap_nav(@pagy).html_safe %>
            </nav>
          </div>
          <div class="col-auto">
            <%= link_to 'Create new salary payslip',
              new_employee_salary_payslip_path(@employee),
              class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
