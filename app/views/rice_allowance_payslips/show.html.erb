<div class="row">
  <div class="col-lg-12">
    <%= render 'employees/nav_pills' if employee_context? && !print_preview? %>
    <div class="tab-content">
      <div class="tab-pane active">
        <div class="d-flex justify-content-center">
          <h4 class="mb-3"><%= format_date_range(@payslip.date_range) %> rice allowance payslip for <%= @payslip.employee.try(:name) %></h4>
        </div>
        <%= render 'shared/receipts/top_row', model: @payslip %>
        <%= render 'shared/receipts/breakdown' %>
        <%= render 'shared/receipts/footer' %>
      </div>
    </div>
    <%= render 'shared/payslips/preview_button' %>
  </div>
</div>
