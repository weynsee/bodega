<div class="d-flex p-2">
  <div>
    <span class="pr-2">Employee:</span>
    <span>
      <%- if !print_preview? -%>
        <%= link_to @payslip.employee.name, edit_employee_path(@payslip.employee) %>
      <%- else -%>
        <%= @payslip.employee.try(:name) %>
      <%- end -%>
    </span>
  </div>
  <div class="ml-auto">
    <span class="pr-2">Date Issued:</span>
    <span><%= @payslip.created_at.strftime('%Y/%m/%d') %></span>
  </div>
</div>
<div class="d-flex p-2">
  <div>
    <span class="pr-2">Salary Type:</span>
    <span><%= @payslip.salary_type.humanize %></span>
  </div>
  <div class="ml-auto">
    <span class="pr-2">Salary:</span>
    <span><%= number_to_currency @payslip.rate %></span>
  </div>
</div>
