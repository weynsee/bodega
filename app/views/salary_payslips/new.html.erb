<div class="row">
  <div class="col-lg-12">
    <%= render 'employees/nav_pills' %>
    <div class="tab-content">
      <div class="tab-pane active">
        <div class="row">
          <div class="col-md-8 order-md-1">
            <h4 class="mb-3">
              Generate salary payslip for <%= @employee.name %>
            </h4>
            <%= render 'payslip_details' %>
          </div>
          <%= render 'shared/payslips/summary',
            rate_computation: "#{number_with_precision(@payslip.rate, precision: 2)} (rate) * #{number_with_precision(@payslip.days_present, precision: 2)} (days present)"
          %>
        </div>
      </div>
    </div>
  </div>
</div>
