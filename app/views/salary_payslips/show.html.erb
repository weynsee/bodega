<div class="row">
  <div class="col-lg-12">
    <%= render 'employees/nav_pills' if employee_context? && !print_preview? %>
    <div class="tab-content">
      <div class="tab-pane active">
        <div class="d-flex justify-content-center">
          <h4 class="mb-3"><%= format_date_range(@payslip.date_range) %> salary payslip for <%= @payslip.employee.try(:name) %></h4>
        </div>
        <%= render 'payslip_header' %>
        <%= render 'payslip_breakdown' %>
        <%= render 'payslip_footer' %>
      </div>
    </div>
    <%- unless print_preview? -%>
      <div class="d-flex">
        <div class="p-2">
          <%= link_to 'Printer-friendly version',
            nesting_aware_salary_payslip_path(@payslip, printer: true),
            target: '_blank',
            class: 'btn btn-primary'
          %>
        </div>
      </div>
    <%- end -%>
  </div>
</div>
